<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#16bfff</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title." parent="TextAppearance.AppCompat.Widget.ActionBar.Title."
        tools:ignore="ResourceCycle">
        <item name="android:textColor">@color/colorAccent</item>

    </style>

    <style name="TextHint" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
    </style>



</resources>
