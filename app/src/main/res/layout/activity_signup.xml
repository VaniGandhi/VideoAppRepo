<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizApp.SignupActivity"
    android:background="@drawable/quizbackground2">


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/quiz"
        android:id="@+id/quiz_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quiz_icon"
        android:text="Quiz"
        android:textSize="35dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:layout_marginLeft="120dp"
        android:id="@+id/logintextQuiz"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quiz_icon"
        android:text="App"
        android:textSize="35dp"
        android:layout_marginTop="8dp"

        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/logintextQuiz"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logintextQuiz"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:hint="Enter name"
        android:textColor="@android:color/black"
        android:drawableStart="@drawable/ic_mail_outline_black_24dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:maxLines="1"
        android:includeFontPadding="true"
        android:id="@+id/signupenter_name"




        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupenter_name"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:hint="Enter email"
        android:textColor="@android:color/black"
        android:drawableStart="@drawable/ic_mail_outline_black_24dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:maxLines="1"
        android:includeFontPadding="true"
        android:id="@+id/signupenter_email"




        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupenter_email"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:hint="Enter password"
        android:textColor="@android:color/black"
        android:drawableStart="@drawable/ic_lock_outline_black_24dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:maxLines="1"
        android:includeFontPadding="true"
        android:id="@+id/signupenter_password"





        />

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupenter_password"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/blueround_button"
        android:text="Signup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:text="Already Registered? Login now"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/signuptextnalready"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>